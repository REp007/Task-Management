{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "noUnusedLocals": true, // Check for unused local variables
    "noUnusedParameters": true, // Check for unused parameters
    "noPropertyAccessFromIndexSignature": true // Disallow property access from an index signature
  },
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}
